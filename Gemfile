# define source rof gems
source 'https://rubygems.org'

# sinatra DSL
gem 'sinatra'

# Puma web server
gem 'puma'

# html parser
gem 'nokogiri'

# SQL adapter
gem 'sequel'

# SQLite3
gem 'sqlite3'

# Whenever gem for updating crontab automatically
gem 'whenever', :require => false

# HAML templates
gem 'haml'

# Bootstrap
gem 'sinatra-twitter-bootstrap', :require => 'sinatra/twitter-bootstrap'